<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet author="mcovarr" id="rc">
        <comment>Refactor the RC column off LOCAL_JOB up into EXECUTION since it should be usable by all backends.</comment>
        <dropColumn tableName="LOCAL_JOB" columnName="RC" />
        <addColumn tableName="EXECUTION">
            <column name="RC" type="INT" />
        </addColumn>
    </changeSet>

</databaseChangeLog>