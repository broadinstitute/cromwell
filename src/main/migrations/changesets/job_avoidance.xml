<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet author="chrisl" id="job_avoidance">
        <comment>Adding some tracking columns for determining eligibility for Job Avoidance.</comment>
        <addColumn tableName="EXECUTION">
            <column name="ALLOWS_AVOIDANCE" type="BOOLEAN" defaultValueBoolean="true" >
                <constraints nullable="false" />
            </column>
            <column name="DOCKER_IMAGE_HASH" type="VARCHAR(32)">
                <constraints nullable="true" />
            </column>
            <column name="AVOIDED_TO" type="INT">
                <constraints nullable="true" />
            </column>
            <column name="EXECUTION_HASH" type="VARCHAR(32)">
                <constraints nullable="true" />
            </column>
        </addColumn>
        <createIndex indexName="HASH_INDEX"
                     tableName="EXECUTION" unique="false">
            <column name="EXECUTION_HASH"/>
        </createIndex>

        <addColumn tableName="SYMBOL">
            <column name="HASH" type="VARCHAR(32)">
                <constraints nullable="true" />
            </column>
        </addColumn>

        <addForeignKeyConstraint baseTableName="EXECUTION"
                                 referencedTableName="EXECUTION"
                                 baseColumnNames="AVOIDED_TO"
                                 referencedColumnNames="EXECUTION_ID"

                                 constraintName="FK_VALID_AVOIDANCE"
                                 onDelete="SET NULL"
                                 onUpdate="CASCADE"
                                 />
    </changeSet>
</databaseChangeLog>