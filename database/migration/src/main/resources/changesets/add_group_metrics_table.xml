<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog objectQuotingStrategy="QUOTE_ALL_OBJECTS"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">
    
    <changeSet id="add_group_metrics_entry_table" author="sshah" dbms="mysql,hsqldb">
        <comment>Table that tracks when a group or billing project ran into Cloud Quota exhaustion</comment>
        <createTable tableName="GROUP_METRICS_ENTRY">
            <column autoIncrement="true" name="GROUP_METRICS_ENTRY_ID" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="PK_GROUP_METRICS_ENTRY"/>
            </column>
            <column name="GROUP_ID" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="QUOTA_EXHAUSTION_DETECTED" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="add_index_for_group_metrics_table" author="sshah" dbms="mysql,hsqldb">
        <createIndex indexName="IX_GROUP_METRICS_ENTRY_GI"
                     tableName="GROUP_METRICS_ENTRY" unique="false">
            <column name="GROUP_ID"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
