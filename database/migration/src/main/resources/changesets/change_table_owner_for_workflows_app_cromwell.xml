<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog objectQuotingStrategy="QUOTE_ALL_OBJECTS"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <property  name="newDatabaseOwnerRole" value="hello_world"/>

    <changeSet author="sshah" id="change_table_owner_for_workflows_app_cromwell" dbms="postgresql">
        <preConditions onFail="MARK_RAN">
            <!-- check that 'newDatabaseOwnerRole' role is not null and exists in the roles table -->
            <sqlCheck expectedResult="1">
                SELECT count(*)
                FROM pg_roles
                where '${newDatabaseOwnerRole}' is NOT NULL AND rolname = '${newDatabaseOwnerRole}';
            </sqlCheck>
            <!-- check that table ownership update hasn't already happened -->
            <sqlCheck expectedResult="0">
                SELECT count(*)
                FROM pg_tables
                WHERE tableowner = '${newDatabaseOwnerRole}';
            </sqlCheck>
        </preConditions>
        <sql>REASSIGN OWNED BY CURRENT_USER TO ${newDatabaseOwnerRole};</sql>
    </changeSet>

</databaseChangeLog>